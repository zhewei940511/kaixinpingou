<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="7dp"
        app:contentPadding="@dimen/dp_7"
        android:layout_weight="1"
        android:layout_width="0dp"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardBackgroundColor="@color/white"
        android:layout_height="262dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/test_one"
                android:layout_width="match_parent"
                android:layout_height="159dp"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/typeface13sp"
                android:layout_marginTop="@dimen/dp_10"
                android:text="普利维生素咀嚼片30*2片"
                android:textColor="@color/black_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <Button
                    android:layout_marginTop="@dimen/dp_6"
                    android:textColor="#FF4B42"
                    android:textSize="@dimen/typeface8sp"
                    android:background="#FFF0F0"
                    android:text="测试"
                    android:layout_width="42dp"
                    android:layout_height="@dimen/dp_15"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_9"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/typeface10sp"
                    android:textColor="#FF382E"
                    android:text="商城价:￥20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/typeface10sp"
                    android:textColor="#FF382E"
                    android:text="商城价:￥20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_weight="1"
        android:layout_width="0dp"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardBackgroundColor="@color/white"
        android:layout_height="262dp">

    </androidx.cardview.widget.CardView>
</LinearLayout>
