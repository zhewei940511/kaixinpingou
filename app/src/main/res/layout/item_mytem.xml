<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dp_10">
    <LinearLayout
        android:layout_gravity="center"
        android:background="@drawable/shape_layout_13"
        android:orientation="vertical"
        android:layout_width="351dp"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_headimgurl"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:scaleType="fitXY"
            android:src="@mipmap/hotel_details"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_11"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_uernametitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首席执行官1245628"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface14sp" />

                <ImageView
                    android:id="@+id/img_level"
                    android:layout_width="35dp"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/icon_teamcustomer" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="15623487954"
                android:textColor="@color/black_99"
                android:textSize="@dimen/typeface12sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/shape_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <LinearLayout
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:textColor="@color/black_66"
                android:text="总人数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_total_number_teams"
                android:layout_marginTop="@dimen/dp_10"
                android:text="32"
                android:textSize="@dimen/typeface14sp"
                android:textColor="@color/black_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:textColor="@color/black_66"
                android:text="新增人数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_number_team_added_today"
                android:layout_marginTop="@dimen/dp_10"
                android:text="32"
                android:textSize="@dimen/typeface14sp"
                android:textColor="@color/black_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:textColor="@color/black_66"
                android:text="总业绩"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_team_performance"
                android:layout_marginTop="@dimen/dp_10"
                android:text="32"
                android:textSize="@dimen/typeface14sp"
                android:textColor="@color/black_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:textColor="@color/black_66"
                android:text="新增业绩"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_team_new_performance_today"
                android:layout_marginTop="@dimen/dp_10"
                android:text="32"
                android:textSize="@dimen/typeface14sp"
                android:textColor="@color/black_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
