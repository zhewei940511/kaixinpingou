<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_15"
    android:background="@drawable/shape_layout_5"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_withdrawalamount"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:textSize="@dimen/typeface13sp"
            android:textColor="@color/black_33"
            android:text="提现金额：￥55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/tv_withdrawalstate"
            android:textSize="@dimen/typeface13sp"
            android:textColor="@color/white"
            android:text="结算成功"
            android:background="@drawable/shape_withdrawalrecord_layout"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_28"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_withdrawalservicefee"
        android:textSize="@dimen/typeface13sp"
        android:text="服务费：￥12"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_withdrawalserialnumber"
        android:textSize="@dimen/typeface13sp"
        android:text="流水号：0101001016922004171605257828482"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_withdrawalsubmittime"
        android:textSize="@dimen/typeface13sp"
        android:text="提交时间：020-04-14 10:50:32"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_withdrawalclearingtime"
        android:textSize="@dimen/typeface13sp"
        android:text="结算时间：2020-04-14 11:10:47"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_withdrawalsettlementchannels"
        android:layout_marginBottom="@dimen/dp_22"
        android:textSize="@dimen/typeface13sp"
        android:text="结算渠道：微信零钱"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
