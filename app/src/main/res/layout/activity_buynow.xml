<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_title_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/rl_noaddress"
                android:layout_width="351dp"
                android:layout_height="122dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_layout_13">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="151dp"
                    android:layout_marginTop="@dimen/dp_25"
                    android:src="@mipmap/icon_shippingaddress" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="76dp"
                    android:text="请选择收货地址"
                    android:textColor="#B3B3B3"
                    android:textSize="@dimen/typeface13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="332dp"
                    android:layout_marginTop="55dp"
                    android:src="@mipmap/icon_goto" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_40"
                    android:src="@mipmap/address_icon"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_25"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_15"
                        android:background="@drawable/shape_button_main_3"
                        android:text="默认"
                        android:textColor="@color/white"
                        android:textSize="@dimen/typeface10sp" />

                    <TextView
                        android:id="@+id/tv_addresstitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="重庆市南岸区"
                        android:textColor="@color/black_33"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_addresscontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_45"
                    android:text="南坪万达2号楼"
                    android:textColor="@color/black_33"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_addressphonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="70dp"
                    android:text="小王  136****2354"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="351dp"
                android:layout_height="242dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_layout_13"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="商品信息"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:src="@drawable/pic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日本美源可瑞慕染发膏 让发迹轻松染发 让美丽又更多选择"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/typeface13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="规格：深棕色 4G"
                            android:textColor="@color/black_99"
                            android:textSize="@dimen/typeface11sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_17">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥118"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/typeface13sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/selector_number_add_sub"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/btn_sub"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_30"
                                    android:background="@mipmap/ic_plus" />

                                <TextView
                                    android:id="@+id/tv_num"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_30"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#333333" />

                                <ImageView
                                    android:id="@+id/btn_add"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_30"
                                    android:background="@mipmap/ic_add" />

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="商家配送，支付后尽快为您发货"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/typeface13sp" />

                <EditText
                    android:layout_width="327dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/shape_edit_5"
                    android:hint="如果有其他要求，请在此输入"
                    android:paddingLeft="@dimen/dp_15"
                    android:textSize="@dimen/typeface11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_layout_5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_26"
                        android:text="运费"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_26"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="￥8"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="29dp"
                        android:text="开心豆抵扣金币抵扣"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_14" />

                    <com.kyleduo.switchbutton.SwitchButton
                        android:id="@+id/order_switch"
                        android:layout_width="33dp"
                        android:layout_height="@dimen/dp_17"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_12" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_showuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="总金币 10015.01，当前订单可使用10.4金币，抵扣10.4元"
                    android:textSize="@dimen/typeface12sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="实付金额:108.00"
            android:textSize="@dimen/typeface15sp" />

        <Button
            android:layout_width="108dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_button"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="@dimen/typeface15sp" />
    </RelativeLayout>
</LinearLayout>
