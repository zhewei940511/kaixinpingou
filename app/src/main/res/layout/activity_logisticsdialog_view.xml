<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="476dp"
    android:background="@drawable/bg_shape"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="查看物流"
                android:textColor="@color/black_33"
                android:textSize="@dimen/typeface14sp" />

            <ImageView
                android:id="@+id/cancle"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_22"
                android:src="@mipmap/ic_delete" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@mipmap/test_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="宜代生活茶3.5g*6包健康生活好"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface14sp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="￥28.9"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/typeface13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="中通快递 711217895175698"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/typeface12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/corners_bg">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_logistics"
                android:layout_width="match_parent"
                android:layout_height="279dp" />
        </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="复制单号"
        android:textColor="#FF666C" />
</LinearLayout>