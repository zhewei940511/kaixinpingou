<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp">
    <ImageView
        android:id="@+id/img_selecticon"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_address_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_9"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@id/img_selecticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_addressusername"
                android:textSize="@dimen/typeface16sp"
                android:textColor="#333333"
                android:text="小王"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_addressuserphone"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="1234565"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_addressusercontent"
            android:paddingTop="@dimen/dp_10"
            android:textSize="@dimen/typeface14sp"
            android:text="重庆市南岸区万达广场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/img_editaddress"
        android:layout_marginRight="37dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
