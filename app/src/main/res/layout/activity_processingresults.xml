<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_title_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_17">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="#FF7E5F"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_23">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请等待商家处理"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/typeface16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还剩1天23时58分"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/typeface12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:text="您已成功发起退款申请，请耐心等待商家处理"
                android:textColor="@color/black_33"
                android:textSize="@dimen/typeface13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_25"
                android:text="1.您已成功发起退款申请，请耐心等待商家处理" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="end">
                <!--  android:background="@drawable/shape_button_black_cc"
                  tools:visibility="visible"
                  android:textColor="#969696"-->
                <Button
                    android:layout_width="76dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/shape_button_black_cc"
                    android:text="联系客服"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface11sp" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/shape_button_black_cc"
                    android:text="撤销申请"
                    android:textColor="#333333"
                    android:textSize="@dimen/typeface12sp" />

                <Button
                    android:id="@+id/btn_detailspay"
                    android:layout_width="76dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/shape_button_red_66"
                    android:text="修改申请"
                    android:textColor="#FF2C34"
                    android:textSize="@dimen/typeface11sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="end">
                <!--  android:background="@drawable/shape_button_black_cc"
                  tools:visibility="visible"
                  android:textColor="#969696"-->
                <Button
                    android:layout_width="76dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/shape_button_black_cc"
                    android:text="联系客服"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface11sp" />

                <Button
                    android:id="@+id/btn_checkthelogistics"
                    android:layout_width="90dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/shape_button_red_66"
                    android:text="查看物流"
                    android:textColor="#FF2C34"
                    android:textSize="@dimen/typeface12sp" />

                <Button
                    android:id="@+id/btn_submitorder"
                    android:layout_width="76dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/shape_button_red_66"
                    android:text="提交单号"
                    android:textColor="#FF2C34"
                    android:textSize="@dimen/typeface11sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_24"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品信息"
                android:textColor="@color/black_33"
                android:textSize="@dimen/typeface14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_4"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:layout_width="345dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_6">

                <ImageView
                    android:id="@+id/img_ordergoodpic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/one_test" />

                <RelativeLayout
                    android:id="@+id/ry_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_ordergoodpic">

                    <TextView
                        android:id="@+id/tv_ordergoodtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_17"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="舒蕾洗发水山茶花焗油莹亮600ml*2 瓶"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/typeface13sp" />

                    <TextView
                        android:id="@+id/tv_ordergoodsku"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_ordergoodtitle"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:maxLines="1"
                        android:text="规格：600ml*2"
                        android:textColor="@color/black_66"
                        android:textSize="@dimen/typeface12sp" />

                    <TextView
                        android:id="@+id/tv_ordergoodspace"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="￥39.90 x1"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/typeface12sp" />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_4"
                android:background="#F0F0F0" />
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:textColor="@color/black_99"
                android:layout_marginTop="@dimen/dp_10"
                android:text="退款原因：其他"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:textColor="@color/black_99"
                android:layout_marginTop="@dimen/dp_10"
                android:text="退款金额：￥38.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:textColor="@color/black_99"
                android:layout_marginTop="@dimen/dp_10"
                android:text="退款数量：1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:textColor="@color/black_99"
                android:layout_marginTop="@dimen/dp_10"
                android:text="申请时间：2020-07-30 15:49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:textColor="@color/black_99"
                android:layout_marginTop="@dimen/dp_10"
                android:text="退款编号：2458425712382548791287"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
