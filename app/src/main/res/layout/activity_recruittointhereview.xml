<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_view" />
    <ImageView
        android:layout_marginTop="88dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp_25"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black_33"
        android:textSize="@dimen/typeface17sp"
        android:text="资料审核中"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/typeface14sp"
        android:textColor="@color/black_66"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_gravity="center_horizontal"
        android:text="平台将于T+1日内完成资料审核，并将审核结果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/typeface14sp"
        android:textColor="@color/black_66"
        android:layout_gravity="center_horizontal"
        android:text="以短信形式通知您!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_returnhomepage"
        android:textColor="@color/white"
        android:textSize="@dimen/typeface16sp"
        android:text="返回首页"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_button"
        android:layout_width="160dp"
        android:layout_height="@dimen/dp_45"/>
</LinearLayout>
