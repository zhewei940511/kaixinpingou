<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="351dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/shape_layout_5">


        <TextView
            android:id="@+id/search_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="植物保罗洗发水"
            android:paddingLeft="@dimen/dp_5"
            android:textColor="#919191"
            android:textColorHint="#919191"
            android:textSize="@dimen/typeface14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_search" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/normal_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:ignore="UselessParent">



        <com.laojiashop.laojia.view.VerticalTabLayout
            android:id="@+id/navigation_tab_layout"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            app:indicator_width="0dp"
            app:tab_height="50dp"
            app:tab_margin="0dp"
            app:tab_mode="scrollable"
            tools:ignore="RtlSymmetry" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/global_filter_ll_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingEnd="34dp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/navigation_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/global_filter_ll_rv"
                android:layout_marginBottom="@dimen/dp_3"
                android:background="@color/white" />


            <RelativeLayout
                android:id="@+id/global_filter_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A81A1A1A"
                android:visibility="visible"
                tools:visibility="visible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/global_filter_grid_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="@dimen/dp_13"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_40"
                    tools:ignore="RtlSymmetry" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cover_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="34dp"
                android:src="@mipmap/navigation_cover"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_12"
                android:src="@mipmap/next_xiala"
                android:visibility="visible" />


        </RelativeLayout>

    </LinearLayout>
