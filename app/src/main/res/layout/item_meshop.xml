<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/dp_9"
    android:background="@drawable/shape_layout_5"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/orderNumTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="订单编号:2019061417459987"
            android:textColor="#646464"
            android:textSize="@dimen/typeface12sp" />
        <ImageView
            android:id="@+id/img_copyorder"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_copy"
            android:layout_toRightOf="@id/orderNumTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/statusTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="待付款"
            android:textColor="@color/red"
            android:textSize="@dimen/typeface15sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="112dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/meshop_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_5"
            android:src="@mipmap/one_test" />

        <RelativeLayout
            android:id="@+id/ry_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/meshop_pic">

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/typeface13sp"
                android:text="舒蕾洗发水山茶花焗油莹亮600ml*2 瓶"
                android:textColor="@color/black_33" />
            <TextView
                android:id="@+id/tv_skuname"
                android:layout_below="@id/titleTxt"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:maxLines="1"
                android:textSize="@dimen/typeface12sp"
                android:text="规格：600ml*2"
                android:textColor="@color/black_66" />
            <TextView
                android:id="@+id/specTxt"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/typeface12sp"
                android:text="￥39.90 x1"
                android:textColor="@color/black_33" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            android:textColor="#646464" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥288"
            android:textColor="@color/red" />
        <TextView
            android:id="@+id/freighttxt"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/typeface13sp"
            android:textColor="#999999"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/dp_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="end">

        <Button
            android:id="@+id/btn_orderdetails"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_button_black_cc"
            android:text="订单详情"
            android:textColor="#969696"
            android:textSize="@dimen/typeface11sp" />

        <Button
            android:id="@+id/btn_cancelorders"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center|right"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_button_red_66"
            android:text="取消订单"
            android:textColor="#FF666C"
            android:textSize="@dimen/typeface11sp"
            android:visibility="gone"
            tools:visibility="visible" />
        <Button
            android:id="@+id/btn_delectorder"
            android:layout_width="90dp"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/shape_button_red_66"
            android:text="删除订单"
            android:textColor="#FF666C"
            android:textSize="@dimen/typeface12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_confirmthegoods"
            android:layout_width="90dp"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/shape_button_red_66"
            android:text="确认收货"
            android:textColor="#FF666C"
            android:textSize="@dimen/typeface12sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>
</LinearLayout>
