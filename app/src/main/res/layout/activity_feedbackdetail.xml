<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_title_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="类型:"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/typeface13sp" />

                <TextView
                    android:id="@+id/tv_feedbackdetailtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="建议反馈"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F4F4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="工单号:"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/typeface13sp" />

                <TextView
                    android:id="@+id/tv_feedbackdetailordernum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="建议反馈"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F4F4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系电话:"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/typeface13sp" />

                <TextView
                    android:id="@+id/tv_feedbackdetailphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="建议反馈"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F4F4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="当前状态:"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/typeface13sp" />

                <TextView
                    android:id="@+id/tv_feedbackdetailstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="建议反馈"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F4F4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="创建时间:"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/typeface13sp" />

                <TextView
                    android:id="@+id/tv_feedbackdetailcreatetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="建议反馈"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F4F4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:text="反馈内容"
                android:textColor="@color/black_66"
                android:textSize="@dimen/typeface13sp" />

            <TextView
                android:id="@+id/tv_feedbackdetailcontext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/black_33"
                android:textSize="@dimen/typeface14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_imgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F4F4F4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_12"
                android:text="处理进度"
                android:textColor="@color/black_99"
                android:textSize="@dimen/typeface12sp" />
<!--            这个就是那个进度的列表我新开的一个，想重构就没用那套代码e-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_withtheprogress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_20" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F4F4F4" />

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="12dp"
                android:text="反馈补充"
                android:textColor="@color/black_99"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:id="@+id/ly_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="14dp">

                <TextView
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:text="反馈内容:"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface14sp" />

                <EditText
                    android:id="@+id/et_feedbackcontext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="请输入问题"
                    android:textColorHint="@color/black_99"
                    android:textSize="@dimen/typeface14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_picselect_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相关图片"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/typeface14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:text="最多上传三张"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/typeface14sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/picselect_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_30" />
            <Button
                android:id="@+id/btn_addfeedback"
                android:layout_width="340dp"
                android:layout_marginBottom="20dp"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/shape_button_main"
                android:text="提交反馈"
                android:textColor="@color/white"
                android:textSize="@dimen/typeface15sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
