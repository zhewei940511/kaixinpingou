<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_recruittobg">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/icon_recruittobgtop" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_marginTop="34dp"
                    android:src="@mipmap/back_icon" />
            </FrameLayout>

            <FrameLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/icon_contentbg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="宣言"
                    android:textColor="#8E5900"
                    android:textSize="@dimen/typeface16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="舞台再大，你没有用心，永远是个观众\n平台再好，你没有参与，永远赚不到钱\n胆子再大，你不敢闯，永远发挥不了\n只有敢试，敢干，敢闯的人才会成功。"
                    android:textColor="#8E5900"
                    android:textSize="@dimen/typeface13sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@mipmap/icon_contentbg">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="活动说明"
                    android:textColor="#8E5900"
                    android:textSize="@dimen/typeface16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="舞台再大，你没有用心，永远是个观众\n平台再好，你没有参与，永远赚不到钱\n胆子再大，你不敢闯，永远发挥不了\n只有敢试，敢干，敢闯的人才会成功。"
                    android:textColor="#8E5900"
                    android:textSize="@dimen/typeface13sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_100"
                android:background="@mipmap/icon_contentbg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="会员等级"
                    android:textColor="#8E5900"
                    android:textSize="@dimen/typeface16sp" />
                <TableLayout
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <TableRow>

                        <Button
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:background="#FFE8BC"
                            android:text="用户身份" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#ECCB87"
                            android:text="服务费" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#ECCB87"
                            android:text="业绩目标" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#ECCB87"
                            android:text="考核周期" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#ECCB87"
                            android:text="选择" />
                    </TableRow>

                    <TableRow>

                        <Button
                            android:layout_width="73dp"
                            android:layout_height="35dp"
                            android:background="#F5D187"
                            android:text="导购" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:text="￥1000" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:text="￥2W" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:text="一个月" />

                        <ImageButton
                            android:src="@mipmap/icon_checksure"
                            android:id="@+id/btn_checkshoppers"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:checked="true" />
                    </TableRow>
                    <TableRow>

                        <Button
                            android:layout_width="73dp"
                            android:layout_height="35dp"
                            android:background="#F5D187"
                            android:text="经销商" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:text="￥10000" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:text="￥20W" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:text="2个月" />

                        <ImageButton
                            android:id="@+id/btn_checkdealers"
                            android:src="@mipmap/icon_checksure"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:checked="true" />
                    </TableRow>
                    <TableRow>

                        <Button
                            android:layout_width="73dp"
                            android:layout_height="35dp"
                            android:background="#F5D187"
                            android:text="代理商" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:text="￥100000" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:text="￥200W" />


                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:text="4个月" />

                        <ImageButton
                            android:id="@+id/btn_checkagent"
                            android:src="@mipmap/icon_checksure"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="#FFD694"
                            android:checked="true" />
                    </TableRow>
                </TableLayout>

            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/icon_buttonbg">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:text="用户升级协议" />

        <TextView
            android:id="@+id/tv_uploaddocuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_28"
            android:text="立即申请"
            android:textColor="@color/white"
            android:textSize="@dimen/typeface14sp" />
    </RelativeLayout>
</RelativeLayout>
