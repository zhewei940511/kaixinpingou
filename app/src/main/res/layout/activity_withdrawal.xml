<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <include layout="@layout/base_title_view" />
        <LinearLayout
            android:background="@color/gray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="351dp"
            android:layout_height="111dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_layout_13"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="可提现金额"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@null" />
            </RelativeLayout>

            <View
                android:layout_width="321dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#F5F5F5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="兑换数量"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="最低金额5元"
                    android:textColor="@color/black_99" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="29dp"
            android:text="金币提现规则"
            android:textColor="@color/black_66"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_15"
            android:text="1.单笔提现额最低￥5元，每日提现上线5000元。"
            android:textColor="@color/black_66"
            android:textSize="@dimen/typeface12sp" />

        <Button
            android:layout_width="362dp"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center"
            android:layout_marginTop="278dp"
            android:background="@drawable/shape_button_main"
            android:text="确认提现"
            android:textColor="@color/white"
            android:textSize="@dimen/typeface17sp" />
        </LinearLayout>
</LinearLayout>
