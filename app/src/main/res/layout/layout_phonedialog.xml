<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="手机号绑定"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <EditText
            android:paddingLeft="@dimen/dp_10"
            android:textSize="@dimen/typeface15sp"
            android:hint="请输入正确的手机号码"
            android:background="@drawable/shape_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"/>
        <LinearLayout
            android:id="@+id/btnsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/quitBtn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_quit"
                android:gravity="center"
                android:text="取消"
                android:textColor="#ff929292"
                android:textSize="13sp" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/agreeBtn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_ok"
                android:gravity="center"
                android:text="确定"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>