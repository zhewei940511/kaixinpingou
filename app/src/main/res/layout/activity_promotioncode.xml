<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@mipmap/icon_promotioncodebg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15">

            <ImageView
                android:id="@+id/iv_header_back"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@mipmap/icon_teamback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的推广码"
                android:textColor="@color/white"
                android:textSize="@dimen/typeface16sp" />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_checkmyteam"
        android:textColor="@color/black_33"
        android:textSize="@dimen/sp_14"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:text="查看我的团队"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:background="@drawable/shape_layout_w"
        android:layout_centerInParent="true"
        android:layout_width="332dp"
        android:layout_height="362dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/typeface18sp"
                android:textColor="@color/black_33"
                android:text="您的推广码"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_mycode"
                android:text="测试"
                android:textSize="@dimen/sp_16"
                android:textColor="#FF666C"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_promotioncode"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="180dp"/>
            <Button
                android:id="@+id/btn_sharecode"
                android:textColor="@color/white"
                android:text="分享邀请码"
                android:textSize="@dimen/typeface14sp"
                android:background="#F8A63C"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="180dp"
                android:layout_height="@dimen/dp_30"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
