<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_personlbg"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="71dp"
                android:layout_height="77dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="64dp"
                android:scaleType="fitXY"
                android:src="@mipmap/hotel_details"
                app:riv_oval="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="90dp"
                android:text="未登录"
                android:textColor="@color/white"
                android:textSize="@dimen/typeface19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_happybean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="157dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/dp_15"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:text="开心豆"
                android:textColor="@color/white"
                android:textSize="@dimen/typeface13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_goldcoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="157dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/dp_15"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:text="金币"
                android:textColor="@color/white"
                android:textSize="@dimen/typeface13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_receivedividends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="157dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/dp_15"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:text="分红权"
                android:textColor="@color/white"
                android:textSize="@dimen/typeface13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_marginTop="204dp"
            android:background="@drawable/shape_layout_13"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_15"
                android:text="我的订单"
                android:textColor="@color/black_33"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_28"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ly_mepagegenerationofpayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/order_forthepayment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="待付款"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/typeface13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_mepagedropshipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/order_tosendthegoods" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="待发货"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/typeface13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_mepageforthegoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/order_forthegoods" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="待收货"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/typeface13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mepagehavethegoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/order_havethegoods" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="已收货"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/typeface13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_allorders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/order_all" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="全部订单"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/typeface13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_myset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="331dp"
            android:layout_marginTop="34dp"
            android:src="@mipmap/icon_myset" />
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_layout_13"
        android:layout_width="match_parent"
        android:layout_height="245dp">
        <TextView
            android:textSize="@dimen/typeface16sp"
            android:text="其他"
            android:textColor="@color/black_33"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="@dimen/dp_13"
            android:layout_gravity="center"
            android:background="#F5F5F5"
            android:layout_width="321dp"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_27"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_myteam"
                android:textSize="@dimen/typeface14sp"
                android:textColor="#4D4D4D"
                android:text="我的团队"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@mipmap/icon_goto"
                android:layout_marginRight="33dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_13"
            android:layout_gravity="center"
            android:background="#F5F5F5"
            android:layout_width="321dp"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/ly_mycollection"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_27"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_mycollection"
                android:textSize="@dimen/typeface14sp"
                android:textColor="#4D4D4D"
                android:text="我的收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@mipmap/icon_goto"
                android:layout_marginRight="33dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_13"
            android:layout_gravity="center"
            android:background="#F5F5F5"
            android:layout_width="321dp"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/rl_addressmanagement"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_27"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_myaddress"
                android:textSize="@dimen/typeface14sp"
                android:textColor="#4D4D4D"
                android:text="收货地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@mipmap/icon_goto"
                android:layout_marginRight="33dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_13"
            android:layout_gravity="center"
            android:background="#F5F5F5"
            android:layout_width="321dp"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/rl_feedback"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_27"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_myfeedback"
                android:textSize="@dimen/typeface14sp"
                android:textColor="#4D4D4D"
                android:text="意见反馈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@mipmap/icon_goto"
                android:layout_marginRight="33dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_13"
            android:layout_gravity="center"
            android:background="#F5F5F5"
            android:layout_width="321dp"
            android:layout_height="1dp"/>
    </LinearLayout>
</LinearLayout>
