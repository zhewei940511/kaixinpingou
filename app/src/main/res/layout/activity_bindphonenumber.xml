<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_view"/>

        <TextView
            android:text="绑定手机号"
            android:textColor="@color/black_33"
            android:textSize="30sp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/tv_phonebind"
        android:textSize="@dimen/typeface14sp"
        android:textColor="@color/black_33"
        android:textColorHint="@color/black_99"
        android:hint="请输入手机号"
        android:layout_gravity="center"
        android:layout_marginTop="99dp"
        android:background="@null"
        android:layout_width="292dp"
        android:layout_height="@dimen/dp_40"/>
    <View
        android:layout_gravity="center"
        android:background="#F5F5F5"
        android:layout_width="292dp"
        android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_45"
            android:layout_gravity="center"
            android:layout_width="292dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/tv_codebind"
                android:textSize="@dimen/typeface14sp"
                android:textColor="@color/black_33"
                android:textColorHint="@color/black_99"
                android:hint="请输入验证码"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"/>
            <Button
                android:id="@+id/btn_getcode"
                android:textColor="@color/white"
                android:textSize="@dimen/typeface11sp"
                android:text="获取验证码"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_button_main"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_28"/>
        </RelativeLayout>
    <View
        android:layout_gravity="center"
        android:background="#F5F5F5"
        android:layout_width="292dp"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/btn_bindphonesure"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/typeface17sp"
        android:background="@drawable/shape_button_main"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="292dp"
        android:layout_height="@dimen/dp_45"/>
</LinearLayout>
