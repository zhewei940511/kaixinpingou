                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/typeface14sp"
                            android:text="商品评价"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/black_99"
                            android:layout_alignParentRight="true"
                            android:text="查看更多"
                            android:drawableRight="@mipmap/icon_goto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_headPic"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@mipmap/ic_touxiang"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/iv_headPic"
                            android:text="暮看日西沉"
                            android:textColor="#646464"
                            android:textSize="@dimen/typeface12sp" />


                        <com.willy.ratingbar.ScaleRatingBar
                            android:layout_centerVertical="true"
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:srb_clearRatingEnabled="true"
                            app:srb_drawableEmpty="@mipmap/ic_plant_gray"
                            app:srb_drawableFilled="@mipmap/ic_plant"
                            app:srb_isIndicator="true"
                            app:srb_minimumStars="1"
                            app:srb_numStars="5"
                            app:srb_starHeight="13dp"
                            app:srb_starPadding="5dp"
                            app:srb_starWidth="14dp"
                            app:srb_stepSize="0.5" />
                    </RelativeLayout>
                    <TextView
                        android:layout_marginTop="@dimen/dp_12"
                        android:textColor="@color/black_99"
                        android:textSize="@dimen/typeface11sp"
                        android:text="规格:自然黑棕色，4G"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_11"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/typeface14sp"
                        android:text="产品很满意，颜色很好，产品很满意，颜色很好，产品 很满意，颜色很好"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        >

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginRight="10dp"
                            android:background="#000000"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商 户 详 情"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            />

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginLeft="10dp"
                            android:background="#000000"
                            />
                    </LinearLayout>

                    <!--在正式的开发项目中,商品详情经常会才有图文混排的形式,直接接在网页.
                    一般采用webView即可.在这里,我直接采用2张图片进行替代-->

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pic1"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pic2"
                        />

                </LinearLayout>

            </LinearLayout>
        </com.laojiashop.laojia.view.GoodsCustomScrollView>

        <RelativeLayout
            android:id="@+id/title_label"
            android:layout_width="match_parent"
