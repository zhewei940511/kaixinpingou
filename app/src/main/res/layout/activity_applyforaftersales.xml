<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_title_view" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/shape_layout_w"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_17"
                android:text="商品信息"
                android:textColor="@color/black_33"
                android:textSize="@dimen/typeface14sp" />

            <RelativeLayout
                android:layout_width="345dp"
                android:layout_height="112dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img_ordergoodpic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/one_test" />

                <RelativeLayout
                    android:id="@+id/ry_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_ordergoodpic">

                    <TextView
                        android:id="@+id/tv_ordergoodtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_17"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="舒蕾洗发水山茶花焗油莹亮600ml*2 瓶"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/typeface13sp" />

                    <TextView
                        android:id="@+id/tv_ordergoodsku"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_ordergoodtitle"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:maxLines="1"
                        android:text="规格：600ml*2"
                        android:textColor="@color/black_66"
                        android:textSize="@dimen/typeface12sp" />

                    <TextView
                        android:id="@+id/tv_ordergoodspace"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="￥39.90 x1"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/typeface12sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_layout_w">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="服务类型"
                android:textColor="@color/black_99"
                android:textSize="@dimen/typeface13sp" />

            <LinearLayout
                android:id="@+id/ly_chooseServicetype"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_showServicetypetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="请选择"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/icon_goto" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_layout_w"
            android:paddingBottom="@dimen/dp_15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_22">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="退货原因"
                    android:textColor="@color/black_66" />

                <LinearLayout
                    android:id="@+id/ly_returnReasontype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_showreturnReasontypetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="请选择"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_14" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:src="@mipmap/icon_goto" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:background="@color/gray"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:gravity="top"
                    android:hint="请输入问题"
                    android:textColorHint="@color/black_99"
                    android:textSize="@dimen/typeface14sp" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/picselect_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@color/white" />
            <RelativeLayout
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/typeface13sp"
                    android:textColor="@color/black_99"
                    android:text="退款方式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="金币返还"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_14" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:src="@mipmap/icon_goto" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submittheaftersale"
            android:layout_width="340dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_50"
            android:background="@drawable/shape_button_main"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/typeface15sp" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
